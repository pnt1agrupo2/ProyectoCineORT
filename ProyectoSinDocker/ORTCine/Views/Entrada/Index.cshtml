@model IEnumerable<ORTCine.Models.Entrada>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numeroButaca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pelicula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numeroButaca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pelicula.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.entradaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.entradaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.entradaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
