@model IEnumerable<ORTCine.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1 style="-webkit-text-fill-color:white">Cartelera de Peliculas</h1>

<p>
    <a asp-action="Create">Agregar pelicula a la cartelera</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estaDoblada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.esAtp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sala)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estaDoblada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.esAtp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sala.salaID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.peliculaID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.peliculaID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.peliculaID">Eliminar</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
