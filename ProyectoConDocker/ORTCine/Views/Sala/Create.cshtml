@model ORTCine.Models.Sala

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Sala</h1>

<h4>Sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="numeroSala" class="control-label"></label>
                <input asp-for="numeroSala" class="form-control" />
                <span asp-validation-for="numeroSala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacidadMax" class="control-label"></label>
                <input asp-for="capacidadMax" class="form-control" />
                <span asp-validation-for="capacidadMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la cartelera</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
